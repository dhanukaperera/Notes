<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.dhanukaperera.notes.AddNotes"
    android:orientation="vertical"
    android:padding="20dp">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editText_title"
        android:hint="Enter Notes Title"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editText_desc"
        android:hint="@string/txtHint_description"/>

    <Button
        android:id="@+id/btn_addNote"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/btnTxt_editNote" />

</LinearLayout>
